{
    "compilerOptions": {
        "declaration": true,
        "target": "es2017",
        "lib": [
            "es2017",
            "dom"
        ],
        "module": "commonjs",
        "outDir": "dist",
        "sourceMap": true,
        "allowJs": false,
        "moduleResolution": "node",
        "resolveJsonModule": true
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "docs"
    ],
    "include": [
        "src/**/*"
    ]
}

